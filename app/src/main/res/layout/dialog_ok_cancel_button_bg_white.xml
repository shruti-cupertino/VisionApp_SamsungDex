<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/alertBgWhite"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:fontFamily="@font/helvetica_neue75"
        android:id="@+id/tvDialogTitle"
        tools:text="Alert"
        style="@style/okDialogTitle"
        android:textColor="@color/black"
        />

    <LinearLayout
        style="@style/match_wrapLayout"
        android:layout_below="@id/tvDialogTitle"
        android:orientation="vertical"
        >

        <TextView
            android:fontFamily="@font/helvetica_neue55"
            android:id="@+id/tvDialogMessage"
            style="@style/okDialogMessage"
            android:textSize="18sp"
            tools:text="This is normal message"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:textColor="@color/black"/>

        <View style="@style/View8" />

        <LinearLayout
            style="@style/match_wrapLayout"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancel"
                style="@style/dialogButtonBGWhite"
                android:fontFamily="@font/helvetica_neue55"
                android:layout_weight="1"
                android:text="Cancel" />

            <View
                style="@style/View18"/>

            <TextView
                android:id="@+id/tvLogout"
                style="@style/dialogButtonBGWhite"
                android:fontFamily="@font/helvetica_neue55"
                android:layout_weight="1"
                android:text="@string/ok"
                 />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>